{
	"name": "@uklick/core-components",
	"version": "0.0.1",
	"description": "Svelte Core Components for uKlick Studios",
	"type": "module",
	"module": ".src/index.ts",
	"svelte": "./src/index.ts",
	"sideEffects": "false",
	"license": "UNLICENSED",
	"scripts": {
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"test:unit": "vitest",
		"prepare": "svelte-kit sync",
		"gql:gen": "graphql-codegen --config codegen.ts",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"exports": {
		".": {
			"default": "./src/index.ts",
			"svelte": "./src/index.ts"
		},
		"./gql": {
			"import": "./src/lib/gql.ts"
		}
	},
	"peerDependencies": {
		"graphql-request": "^7.1.2",
		"svelte": "^5.1.15",
		"typescript": "^5.6.3"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^5.0.0",
		"@graphql-codegen/cli": "^5.0.2",
		"@neoconfetti/svelte": "^2.0.0",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "catalog:",
		"@sveltejs/kit": "catalog:",
		"@sveltejs/vite-plugin-svelte": "catalog:",
		"@types/eslint": "^9.6.0",
		"@uklick/icon-components": "workspace:*",
		"autoprefixer": "^10.4.20",
		"eslint": "catalog:",
		"eslint-config-prettier": "catalog:",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"postcss": "^8.4.41",
		"prettier": "catalog:",
		"prettier-plugin-svelte": "catalog:",
		"svelte": "catalog:",
		"svelte-check": "catalog:",
		"svelte-preprocess": "^6.0.2",
		"tailwindcss": "^3.4.7",
		"typescript": "catalog:",
		"typescript-eslint": "^8.0.0",
		"vite": "catalog:",
		"vitest": "catalog:"
	},
	"dependencies": {
		"dotenv": "^16.4.5",
		"graphql": "^16.9.0",
		"graphql-request": "^7.1.0"
	}
}
