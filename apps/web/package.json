{
	"name": "uklickstudios",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && vite build",
		"generate": "graphql-codegen",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test"
	},
	"files": [
		"package.json"
	],
	"devDependencies": {
		"@fontsource/fira-mono": "^5.0.0",
		"@graphql-codegen/cli": "catalog:",
		"@graphql-codegen/introspect": "catalog:",
		"@graphql-codegen/typescript": "catalog:",
		"@graphql-codegen/typescript-graphql-request": "catalog:",
		"@graphql-codegen/typescript-operations": "catalog:",
		"@neoconfetti/svelte": "^2.0.0",
		"@playwright/test": "^1.28.2",
		"@sveltejs/adapter-auto": "catalog:",
		"@uklick/content-components": "workspace:*",
		"@uklick/core-components": "workspace:*",
		"@sveltejs/kit": "catalog:",
		"@sveltejs/vite-plugin-svelte": "catalog:",
		"@types/eslint": "^9.6.0",
		"autoprefixer": "^10.4.20",
		"eslint": "catalog:",
