		"prettier": "catalog:",
		"prettier-plugin-svelte": "catalog:",
		"svelte": "catalog:",
		"svelte-check": "catalog:",
		"svelte-preprocess": "^6.0.2",
		"tailwindcss": "^3.4.7",
		"typescript": "catalog:",
		"typescript-eslint": "^8.0.0",
		"vite": "catalog:",
		"vitest": "catalog:"
	},
	"type": "module",
	"dependencies": {
		"dotenv": "^16.4.5",
		"graphql-request": "catalog:"
	}
